extends layouts/login-layout.pug

block content
    .loginContainer
        h1 Login
        p #{message}
        form(method="post")
            input(type="text", name="email", placeholder="Username or email", value=email required="")
            input(type="password", name="password", placeholder="Password", required="")
            input(type="submit", name="loginButton", value="LOG IN")
            a(href="/register") Don't have an account yet? Sign up here!
